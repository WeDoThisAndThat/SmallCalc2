<div class="calculator-container" data-controller="calculator">
  <h1 class="calculator-title">Simple Calculator</h1>
  
  <div class="calculator-form">
    <div class="input-group">
      <label for="num1">Number 1:</label>
      <input 
        type="number" 
        id="num1" 
        data-calculator-target="num1"
        step="any"
        placeholder="Enter first number"
      >
    </div>

    <div class="input-group">
      <label for="num2">Number 2:</label>
      <input 
        type="number" 
        id="num2" 
        data-calculator-target="num2"
        step="any"
        placeholder="Enter second number"
      >
    </div>

    <div class="button-group">
      <button 
        type="button" 
        class="btn btn-primary"
        data-action="click->calculator#add"
      >
        Add
      </button>
      
      <button 
        type="button" 
        class="btn btn-secondary"
        data-action="click->calculator#clear"
      >
        Clear
      </button>
    </div>

    <div class="result-display">
      <strong>Result:</strong>
      <span data-calculator-target="result">0</span>
    </div>
  </div>
</div>
